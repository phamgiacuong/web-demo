// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id          String   @id @default(cuid())
  username    String   @unique // Tên đăng nhập (duy nhất)
  email       String?  @unique // Email (có thể null nếu dùng SĐT)
  contactInfo String?  // Email hoặc Số điện thoại dùng để liên lạc
  password    String
  name        String?
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Decimal
  originPrice Decimal?
  category    String
  images      String[]
  attributes  Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Bỏ relation: orderItems OrderItem[]
}

model Order {
  id           String      @id @default(cuid())
  customerName String
  status       String      @default("pending")
  total        Decimal
  createdAt    DateTime    @default(now())
  // Bỏ relation: items OrderItem[]
}

model OrderItem {
  id                 String  @id @default(cuid())
  orderId            String
  productId          String
  quantity           Int
  price              Decimal
  selectedAttributes Json?

  @@index([orderId])
  @@index([productId])
}