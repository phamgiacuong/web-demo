// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Decimal
  category    String
  images      String[] // Mảng chứa các đường dẫn ảnh
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}